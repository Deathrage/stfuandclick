{
	"compilerOptions": {

		"module": "commonjs",

		"noImplicitAny": false,
		"removeComments": true,
		"preserveConstEnums": true,
		"sourceMap": true,

		"target": "es6",

		"jsx": "react",

		"outDir": "./dist",

		"emitDecoratorMetadata": true,
		"experimentalDecorators": true
	},
	"include": [
	  "src/**/*", "webpack.config.js", "assets"
	],
	"exclude": ["node_modules", "tests", "*.spec.ts"]
}